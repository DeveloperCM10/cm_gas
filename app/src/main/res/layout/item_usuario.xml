<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borde_gris_redondo"
        android:padding="20dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/img_ruta"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/ic_person"
            tools:ignore="MissingConstraints"
            android:padding="5dp"
            android:background="@drawable/borde_verde_redondo"
            app:layout_constraintHeight_percent="1"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/txt_nombreRuta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YOSELIN VARGAS VILLEGAS"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_ruta" />

        <TextView
            android:id="@+id/txt_numeroEmpleado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Num. empleado:  12345678"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_nombreRuta"
            app:layout_constraintStart_toEndOf="@+id/img_ruta" />

        <TextView
            android:id="@+id/txt_autoAsignado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto:  12345678"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_numeroEmpleado"
            app:layout_constraintEnd_toEndOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/shadow"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:background="@drawable/shadow_13395"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>