<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/borde_degragado_verde"
        android:padding="20dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/img_ruta"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/ic_notification"
            tools:ignore="MissingConstraints"
            android:padding="5dp"
            android:background="@drawable/borde_verde_redondo"
            app:layout_constraintHeight_percent="1"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/txt_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titulo Notificaci贸n"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="@color/primary_green"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_ruta" />

        <TextView
            android:id="@+id/txt_descripcion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Descripci贸n de la notificaci贸n. Google LLC, 1600 Amphitheatre Parkway, Mountain View, CA 94043, USA
Has recibido este correo electr贸nico porque programador.analista19@ciudadmaderas.com ha compartido un archivo o una carpeta de Google Drive contigo."
            android:layout_marginLeft="10dp"
            android:justificationMode="inter_word"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintTop_toBottomOf="@+id/txt_titulo"
            app:layout_constraintStart_toEndOf="@+id/img_ruta" />

        <TextView
            android:id="@+id/txt_autoAsignado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22/11/2023"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_descripcion"
            app:layout_constraintEnd_toEndOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/shadow"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:background="@drawable/shadow_13395"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>