<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_centerInParent="true"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/borde_blanco_relleno">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp">


                <TextView
                    android:id="@+id/textViewAceptarDialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="Nuevo vehÃ­culo"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textColor="@color/azul_maderas"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />


                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Placa"
                    android:textColor="@color/graydis"
                    android:layout_marginTop="25dp"
                    app:layout_constraintTop_toBottomOf="@+id/textViewAceptarDialog"/>

                <EditText
                    android:id="@+id/edt_placa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Placa"
                    android:textColor="@color/graydis"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:inputType="textCapCharacters"
                    android:background="@drawable/borde_gris_redondo"
                    app:layout_constraintTop_toBottomOf="@+id/txt2"/>

                <TextView
                    android:id="@+id/txt3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="IMEI"
                    android:textColor="@color/graydis"
                    android:layout_marginTop="25dp"
                    app:layout_constraintWidth_percent="0.5"
                    app:layout_constraintTop_toBottomOf="@+id/edt_placa"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/edt_imei"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="IMEI"
                    android:textColor="@color/graydis"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:inputType="number"
                    app:layout_constraintWidth_percent="0.5"
                    android:background="@drawable/borde_gris_redondo"
                    app:layout_constraintTop_toBottomOf="@+id/txt3"
                    tools:ignore="MissingConstraints" />


                <TextView
                    android:id="@+id/txt4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Color"
                    android:textColor="@color/graydis"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="15dp"
                    app:layout_constraintWidth_percent="0.4"
                    app:layout_constraintStart_toEndOf="@+id/txt3"
                    app:layout_constraintTop_toBottomOf="@+id/edt_placa"/>

                <EditText
                    android:id="@+id/edt_color"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Color"
                    android:textColor="@color/graydis"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:layout_marginLeft="15dp"
                    android:inputType="textCapCharacters"
                    app:layout_constraintWidth_percent="0.4"
                    app:layout_constraintStart_toEndOf="@+id/edt_imei"
                    android:background="@drawable/borde_gris_redondo"
                    app:layout_constraintTop_toBottomOf="@+id/txt4"/>

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="ICC"
                    android:textColor="@color/graydis"
                    android:layout_marginTop="25dp"
                    app:layout_constraintWidth_percent="0.5"
                    app:layout_constraintTop_toBottomOf="@+id/edt_imei"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/edt_icc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="ICC"
                    android:textColor="@color/graydis"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:inputType="textCapCharacters"
                    app:layout_constraintWidth_percent="0.5"
                    android:background="@drawable/borde_gris_redondo"
                    app:layout_constraintTop_toBottomOf="@+id/txt1"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/txt5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Modelo"
                    android:textColor="@color/graydis"
                    android:layout_marginTop="25dp"
                    app:layout_constraintWidth_percent="0.4"
                    android:layout_marginLeft="15dp"
                    app:layout_constraintTop_toBottomOf="@+id/edt_color"
                    app:layout_constraintStart_toEndOf="@+id/txt1"/>

                <EditText
                    android:id="@+id/edt_modelo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Modelo"
                    android:textColor="@color/graydis"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:textSize="15dp"
                    app:layout_constraintWidth_percent="0.4"
                    android:layout_marginLeft="15dp"
                    android:inputType="textCapCharacters"
                    android:background="@drawable/borde_gris_redondo"
                    app:layout_constraintTop_toBottomOf="@+id/txt5"
                    app:layout_constraintStart_toEndOf="@+id/edt_icc"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:id="@+id/img_add_picture"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/ic_add_picture"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintHeight_percent="0.2"
                    app:layout_constraintTop_toBottomOf="@+id/edt_modelo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAceptarDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="18dp"
                    android:background="@drawable/borde_azul_relleno"
                    android:textColor="@color/white"
                    android:text="@string/btn_enviar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btnCancelarDialog"
                    app:layout_constraintTop_toBottomOf="@+id/img_add_picture"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCancelarDialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="18dp"
                    android:background="@drawable/borde_azul_relleno"
                    android:text="@string/btn_cancelar"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toEndOf="@+id/btnAceptarDialog"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_add_picture"
                    app:layout_constraintBottom_toBottomOf="parent"/>



                <ProgressBar
                    android:id="@+id/loading_add_car"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintTop_toBottomOf="parent"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"
                    tools:ignore="MissingConstraints" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>